    </action>
    <action id="zhifubaoSubmit" name="支付宝转账充值申请提交" type="html" class="com.payLog.controller.PaylogController" method="zhifubaoSubmit">
    	<view name="支付宝转账充值申请">classes/com/item/view/payLog/Zhifubao.ftl</view>
    </action>
    <!-- 支付宝支付 结束  -->
    
    <!-- 提现申请  开始 -->
    <action id="withdraw" name="提现申请" type="html" class="com.payLog.controller.PaylogController" method="withdraw">
    	<view name="提现申请">classes/com/item/view/payLog/Withdraw.ftl</view>
    </action>
    <action id="withdrawSubmit" name="提现申请" type="html" class="com.payLog.controller.PaylogController" method="withdrawSubmit">
    	<view name="提现申请提交">classes/com/item/view/payLog/Withdraw.ftl</view>
    </action>
    <!-- 提现申请  结束 -->
