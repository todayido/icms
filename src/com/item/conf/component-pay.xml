<?xml version="1.0" encoding="UTF-8"?>
<actions package="pay">
    <action id="payIndex" name="支付首页" type="html" class="com.item.controller.PayController" method="payIndex">
        <view name="支付首页">classes/com/item/view/pay/PayList.ftl</view>
    </action>
    <action id="payList" name="支付列表" type="json" class="com.item.controller.PayController" method="payList"/>
    <action id="payAdd" name="支付新增" type="html" class="com.item.controller.PayController" method="payAdd">
       <view name="支付新增">classes/com/item/view/pay/PayAdd.ftl</view>
    </action>
    <action id="payAddSubmit" name="支付新增提交" type="json" class="com.item.controller.PayController" method="payAddSubmit"/>
    <action id="payModify" name="支付修改" type="html" class="com.item.controller.PayController" method="payModify">
       <view name="支付修改">classes/com/item/view/pay/PayModify.ftl</view>
    </action>
    <action id="payModifySubmit" name="支付修改提交" type="json" class="com.item.controller.PayController" method="payModifySubmit"/>
